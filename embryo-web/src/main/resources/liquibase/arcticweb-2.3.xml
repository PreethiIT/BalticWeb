<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="1416952124-1" author="thomas">
		<!-- <validCheckSum>7:c23e0c88009e2b57e795f7615e3aa102</validCheckSum> -->
		<createTable tableName="SelectionGroup">
			<column name="id" type="BIGINT(19)">
				<constraints primaryKey="true" foreignKeyName="pk_selectiongroup_id"
					nullable="false"></constraints>
			</column>
			<column name="name" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="active" type="bit(1)">
				<constraints nullable="false" />
			</column>
			<column name="polygonsAsJson" type="TEXT" />
			<column name="SecuredUser_id" type="BIGINT(19)">
				<constraints foreignKeyName="fk_selectiongroup_secureduser"
					deleteCascade="true" nullable="false" references="SecuredUser(id)" />
			</column>
		</createTable>
		<modifySql dbms="mysql">
			<append value=" engine innodb" />
		</modifySql>
	</changeSet>
	<changeSet id="1416952124-2" author="thomas">
		<addUniqueConstraint tableName="SelectionGroup"
			constraintName="unique_selectiongroup_name_secureduser" columnNames="name, SecuredUser_id" />
	</changeSet>
	<changeSet id="1416952124-3" author="jacob">
		<dropUniqueConstraint tableName="Forecast"
			constraintName="forecast_provider_area_timestamp_ftype" />
		<addUniqueConstraint tableName="Forecast"
			constraintName="forecast_provider_area_timestamp_ftype_name"
			columnNames="provider, area, timestamp, ftype, name" />
	</changeSet>
</databaseChangeLog>